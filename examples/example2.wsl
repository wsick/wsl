application {
    grid [
        x:name = "LayoutRoot"
        grid.row-definitions {
            row-definition [ height = "auto" ]
            row-definition [ height = "*" ]
        }
    ] {
        border [grid.row = 0] {
            text-block [
                horizontal-alignment = "left"
                vertical-alignment = "center"
                text = {{HeaderText}}
                style = {{%HeaderStyle}}
            ]
        }
        grid [grid.row = 1]
    }
}
