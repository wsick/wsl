application (
    wslns="http://schemas.wsick.com/fayde"
    wslns:x="http://schemas.wsick.com/fayde/x"
) {
    grid [
        x:name = "LayoutRoot"
        grid.row-definitions {
            row-definition { "auto" }
            row-definition { "*" }
        }
    ] {
        border [grid.row = "0"] {
            text-block [
                horizontal-alignment = "left"
                vertical-alignment = "center"
            ]{ "Header" }
        }
        grid [grid.row = "1"]
    }
}