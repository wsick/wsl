Application {
    Grid {
        x:Name="LayoutRoot
        Grid.RowDefinitions [
            RowDefinition { Height="auto" }
            RowDefinition { Height="*" }
        ]
        /Border {
            Grid.Row="0"
            /TextBlock {
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Text=$"HeaderText" Style=%"HeaderStyle"
            }
        }
        /Grid {
            Grid.Row="1"
        }
    }
}